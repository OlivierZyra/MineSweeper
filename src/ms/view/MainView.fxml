<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ms.view.MainViewController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Game">
            <items>
                  <Menu mnemonicParsing="false" text="New...">
                    <items>
                      <MenuItem fx:id="newEasyButton" mnemonicParsing="false" text="Easy" />
                        <MenuItem fx:id="newNormButton" mnemonicParsing="false" text="Normal" />
                        <MenuItem fx:id="newHardButton" mnemonicParsing="false" text="Hard" />
                    </items>
                  </Menu>
              <MenuItem fx:id="quitButton" mnemonicParsing="false" text="Quit" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <BorderPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: lightgray;" BorderPane.alignment="CENTER">
         <top>
            <BorderPane maxHeight="48.0" minHeight="48.0" prefHeight="48.0" prefWidth="158.0" style="-fx-border-style: solid outside; -fx-background-color: lightgray;" BorderPane.alignment="CENTER">
               <center>
                  <Button fx:id="startButton" mnemonicParsing="false" BorderPane.alignment="CENTER">
                     <graphic>
                        <ImageView fitHeight="31.0" fitWidth="42.0" pickOnBounds="true" preserveRatio="true" smooth="false">
                           <image>
                              <Image url="@../../../../../Desktop/Image1.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </center>
               <left>
                  <Label fx:id="mineLabel" contentDisplay="CENTER" style="-fx-background-color: black; -fx-border-style: solid outside; -fx-border-color: white;" text="099" textAlignment="CENTER" textFill="RED" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets left="8.0" />
                     </BorderPane.margin>
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                     <padding>
                        <Insets left="5.0" right="5.0" />
                     </padding>
                  </Label>
               </left>
               <right>
                  <Label fx:id="timerLabel" contentDisplay="CENTER" style="-fx-background-color: black; -fx-border-style: solid outside; -fx-border-color: white;" text="999" textAlignment="CENTER" textFill="RED" BorderPane.alignment="CENTER">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                     <padding>
                        <Insets left="5.0" right="5.0" />
                     </padding>
                     <BorderPane.margin>
                        <Insets right="8.0" />
                     </BorderPane.margin>
                  </Label>
               </right>
            </BorderPane>
         </top>
         <center>
            <GridPane fx:id="gameGrid" gridLinesVisible="true" prefHeight="151.0" prefWidth="158.0" BorderPane.alignment="CENTER">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <BorderPane.margin>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
               </BorderPane.margin>
            </GridPane>
         </center>
      </BorderPane>
   </center>
</BorderPane>
